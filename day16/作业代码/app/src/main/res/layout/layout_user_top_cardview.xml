<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_main_user"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_64"
        android:layout_width="@dimen/dp_345"
        app:cardCornerRadius="12dp"
        android:orientation="vertical"
        android:background="@color/cardview_light_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="@dimen/dp_172">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="@dimen/dp_85">
                <ImageView
                    android:id="@+id/iv_unlogin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@mipmap/ic_unlogin_head"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_55"/>

                <ImageView

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@mipmap/main_icon_user_vip"
                    android:layout_marginLeft="@dimen/dp_42"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"/>

                <TextView
                    android:id="@+id/tv_login_reg"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_unlogin"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:textColor="#333333"
                    android:text="登录/注册"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="@dimen/dp_9"
                    app:layout_constraintLeft_toRightOf="@id/tv_login_reg"
                    android:src="@mipmap/main_icon_edit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_16"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_87">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="0"
                        android:textColor="#ed6100"
                        android:textSize="@dimen/sp_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="我的课程"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="-已购课程学习-"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="0"
                        android:textColor="#ed6100"
                        android:textSize="@dimen/sp_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="我的预约"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="-一对一老师预约-"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="0"
                        android:textColor="#ed6100"
                        android:textSize="@dimen/sp_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="剩余学习币"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="-查看剩余学习币-"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>