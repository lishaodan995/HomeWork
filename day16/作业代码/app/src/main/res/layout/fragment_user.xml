<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:background="@mipmap/main_bg_user_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"/>

        <include layout="@layout/layout_user_top_cardview"
            android:id="@+id/top_card"
            />

        <RelativeLayout
            android:id="@+id/rl_yaoqing"
            app:layout_constraintTop_toBottomOf="@id/top_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#EA5002"
            android:layout_height="@dimen/dp_44"
            android:layout_width="@dimen/dp_345" >

            <ImageView
                android:id="@+id/iv_yaoqing"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_toRightOf="@id/iv_yaoqing"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="邀请好友注册APP，想多重好礼"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="限时好礼，多邀多得"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/cardview_light_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:background="@mipmap/mq_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_kechen"
            app:layout_constraintTop_toBottomOf="@id/rl_yaoqing"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_124">

            <TextView
                android:textSize="@dimen/sp_16"
                android:text="课程相关"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#233333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_28"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/main_icon_card" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="我的作业"
                        android:layout_centerHorizontal="true"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/main_icon_concern"
                        android:layout_width="@dimen/dp_20"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="关注的老师"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/main_icon_collect"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="我的收藏"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/main_icon_download"
                        android:layout_width="@dimen/dp_20"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="我的下载"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/ll_kechen"
            android:id="@+id/ll_dindan"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_124">

            <TextView
                android:textSize="@dimen/sp_16"
                android:text="订单相关"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#233333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_28"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_width="@dimen/dp_20"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_20"
                        android:background="@mipmap/main_icon_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:text="我的订单"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/main_icon_concern"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="收货地址"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/ll_dindan"
            android:id="@+id/ll_myzhanghu"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_124">

            <TextView
                android:textSize="@dimen/sp_16"
                android:text="我的账户"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#233333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_28"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_width="@dimen/dp_20"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_20"
                        android:background="@mipmap/main_icon_coupon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="优惠券"
                        android:layout_centerHorizontal="true"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/main_icon_card"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="学习卡"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/main_icon_vip"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="会员"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/ll_myzhanghu"
            android:id="@+id/ll_autofuwu"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_124">

            <TextView
                android:textSize="@dimen/sp_16"
                android:text="自动服务"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#233333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_28"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_width="@dimen/dp_20"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_20"
                        android:background="@mipmap/main_icon_notice" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:text="我的消息"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/main_icon_feed_back"
                        android:layout_width="@dimen/dp_20"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="意见反馈"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/main_icon_service"
                        android:layout_width="@dimen/dp_20"
                        android:layout_centerHorizontal="true"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="在线客服"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/main_icon_settings"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:text="设置"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>